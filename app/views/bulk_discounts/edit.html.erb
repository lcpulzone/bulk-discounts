<h1>Edit <%= @discount.percentage %>% off discount</h1>

<%= form_with url: "/merchants/#{@merchant.id}/bulk_discounts/#{@discount.id}", method: :patch, local: true do |f| %>
  <%= f.label :percentage %>
  <%= f.number_field :percentage, value: @discount.percentage %><br><br>

  <%= f.label :quantity_threshold %>
  <%= f.number_field :quantity_threshold, value: @discount.quantity_threshold %><br><br>

  <%= f.submit 'Submit Discount Update' %>
<% end %>
