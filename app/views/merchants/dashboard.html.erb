
<h1> <%= @merchant.name %> </h1>

<h2>Favorite Customers:</h2>
  <% @top_customers.each do |top| %>
  <p> <%= top.first_name %> <%= top.last_name %> - <%= top.top_successful_transactions %> purchases </p>
  <% end %>

<h3> <%= link_to 'Merchant Items Index', merchant_items_path(@merchant.id) %> </h3>
<h3> <%= link_to 'Merchant Invoice Index', merchant_invoices_path(@merchant.id) %> </h3>
<h3> <%= link_to 'Discounts', merchant_bulk_discounts_path(@merchant.id) %> </h3>

<section id="ready_to_ship">
<h1>Items Ready To Ship:</h1>
  <% @items.each do |item| %>
    <p><%= item.name %></p>
    <p><%= link_to "#{item.id}", "/merchants/#{@merchant.id}/invoices/#{item.id}" %></p>
    <p>Created on:<%= item.created_at.strftime("%A, %B %d, %Y") %></p>
  <% end %>
</section>
